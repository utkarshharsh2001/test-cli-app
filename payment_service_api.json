{
  "openapi": "3.0.1",
  "info": {
    "title": "Payment Service API",
    "version": "1.0.0",
    "description": "Payment processing service for the e-commerce platform"
  },
  "paths": {
    "/payments": {
      "post": {
        "summary": "Process payment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment processed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/payments/{id}": {
      "get": {
        "summary": "Get payment status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentStatus"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaymentRequest": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "format": "float"
          },
          "currency": {
            "type": "string",
            "example": "USD"
          },
          "paymentMethod": {
            "type": "string",
            "enum": ["credit_card", "paypal", "stripe"]
          },
          "orderId": {
            "type": "integer"
          }
        },
        "required": ["amount", "currency", "paymentMethod", "orderId"]
      },
      "PaymentResponse": {
        "type": "object",
        "properties": {
          "transactionId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["success", "failed", "pending"]
          },
          "message": {
            "type": "string"
          }
        }
      },
      "PaymentStatus": {
        "type": "object",
        "properties": {
          "transactionId": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["success", "failed", "pending", "refunded"]
          },
          "amount": {
            "type": "number"
          },
          "processedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}

